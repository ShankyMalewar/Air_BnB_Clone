<% layout("/layouts/boilerplate") %>

<!-- Fonts & Icons -->
<link
  href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap"
  rel="stylesheet"
/>
<link
  rel="stylesheet"
  href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css"
/>
<link rel="stylesheet" href="/css/new.css" />

<!-- Form Container -->
<div class="container">
  <div class="row justify-content-center">
    <div class="col-lg-6 col-md-8">
      <div class="form-wrapper">
        <h3>Create a new Listing</h3>
        <form
          method="post"
          action="/listings"
          novalidate
          class="needs-validation"
          enctype="multipart/form-data"
        >
          <div class="mb-3">
            <label for="title" class="form-label">
              <i class="fa-solid fa-heading"></i> Title
            </label>
            <input
              id="title"
              name="listing[title]"
              placeholder="Add a catchy title"
              type="text"
              class="form-control"
              required
            />
            <div class="valid-feedback">Looks good</div>
            <div class="invalid-feedback">Please enter a valid title</div>
          </div>

          <div class="mb-3">
            <label for="description" class="form-label">
              <i class="fa-solid fa-align-left"></i> Description
            </label>
            <textarea
              id="description"
              name="listing[description]"
              class="form-control"
              rows="4"
              placeholder="Add a description"
              required
            ></textarea>
            <div class="invalid-feedback">Please enter a valid description</div>
          </div>

          <div class="mb-3">
            <label for="image" class="form-label">
              <i class="fa-solid fa-image"></i> Upload Image
            </label>
            <input
              name="listing[image]"
              type="file"
              class="form-control"
              required
            />
          </div>

          <div class="mb-3">
            <label class="form-label">
              <i class="fa-solid fa-tags"></i> Categories (select multiple)
            </label>

            <% const categories = [ "Mountains", "Arctic", "Farms", "Camping",
            "Trending", "Pools", "Castles", "Beaches", "Iconic Cities",
            "Cottage", "Forests" ]; %>

            <div class="dropdown">
              <button
                class="btn btn-outline-secondary dropdown-toggle w-100"
                type="button"
                id="dropdownCategories"
                data-bs-toggle="dropdown"
                aria-expanded="false"
              >
                Select Categories
              </button>
              <ul
                class="dropdown-menu w-100 p-2"
                aria-labelledby="dropdownCategories"
                style="max-height: 200px; overflow-y: auto"
              >
                <% for (let c of categories) { %>
                <li>
                  <div class="form-check">
                    <input
                      class="form-check-input"
                      type="checkbox"
                      name="listing[category][]"
                      value="<%= c %>"
                      id="cat-<%= c %>"
                    />
                    <label class="form-check-label" for="cat-<%= c %>">
                      <%= c %>
                    </label>
                  </div>
                </li>
                <% } %>
              </ul>
            </div>
          </div>

          <div class="row">
            <div class="mb-3 col-md-6">
              <label for="price" class="form-label">
                <i class="fa-solid fa-indian-rupee-sign"></i> Price
              </label>
              <input
                id="price"
                name="listing[price]"
                placeholder="Enter price"
                class="form-control"
                required
              />
              <div class="invalid-feedback">Please enter a valid price</div>
            </div>

            <div class="mb-3 col-md-6">
              <label for="country" class="form-label">
                <i class="fa-solid fa-globe"></i> Country
              </label>
              <input
                id="country"
                name="listing[country]"
                placeholder="Enter country"
                type="text"
                class="form-control"
                required
              />
              <div class="invalid-feedback">Please enter a valid country</div>
            </div>
          </div>

          <div class="mb-3">
            <label for="location" class="form-label">
              <i class="fa-solid fa-location-dot"></i> Location
            </label>
            <input
              id="location"
              name="listing[location]"
              placeholder="Enter location"
              type="text"
              class="form-control"
              required
            />
            <div class="invalid-feedback">Please enter a valid location</div>
          </div>

          <button class="btn add-btn mt-3">Add</button>
        </form>
      </div>
    </div>
  </div>
</div>
